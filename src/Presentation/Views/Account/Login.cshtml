@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container content-container ">
    <div class="login">
        <form action="Login" method="post" name="login-form" class="login-form">
            @Html.AntiForgeryToken()
            <div class="white-block">
                <div class="content-block">
                    <header class="clearfix">
                        <div class="pull-left font-weight-bold">Đăng nhập</div>
                    </header>
                    <div class="block-inner">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email">
                                Tài khoản
                            </label>
                            <input type="email" asp-for="Email" id ="email" class="required form-control " placeholder="Nhập tài khoản ..." />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">
                                Mật khẩu
                            </label>
                            <input type="password" asp-for="Password" id="password" class="required form-control" value="" placeholder="Nhập mật khẩu..." />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-dark btn-lg btn-block text-uppercase" id="summit-login">
                            <span class="btn-title">Đăng nhập</span>
                        </button>
                    </div>
                </div>
            </div>
            <div>
                <a href="#" class="float-left">Tạo tài khoản mới</a>
                <a href="#" class="float-right">Quên mật khẩu</a>
            </div>
            <div class="clearfix"></div>
        </form>
    </div>
</div>

